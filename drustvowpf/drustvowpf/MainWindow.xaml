<Window x:Class="drustvowpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drustvowpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="drustvo">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="1" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="227">
            <MenuItem Header="Vnesi" Click="MenuItem_Click"/>
            <MenuItem Header="Pregled"/>
            <MenuItem Header="Tiskanje"/>
            <MenuItem Header="Zaščita">
                <MenuItem Header="Zaščiti"/>
                <MenuItem Header="Obnovi"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
